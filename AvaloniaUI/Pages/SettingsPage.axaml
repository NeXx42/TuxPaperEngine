<UserControl xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="1080" x:Class="AvaloniaUI.Pages.SettingsPage"
  xmlns:Common="clr-namespace:AvaloniaUI.Avalonia.Common">
  <Border Background="Green" CornerRadius="25" Margin="20" BoxShadow="0 0 25 0 Black">
    <Grid Margin="10" ColumnSpacing="10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="200"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <ScrollViewer>
        <StackPanel Margin="10">
          <Common:Common_Button Label="Displays" VerticalAlignment="Stretch" Height="40"/>
        </StackPanel>
      </ScrollViewer>

      <Grid Grid.Column="1" Background="Blue">
        <ScrollViewer Margin="10">

          <!--  Displays -->
          <StackPanel x:Name="setting_Display" IsVisible="True">
            <Label Content="Display Settings" HorizontalAlignment="Center" FontSize="20"/>

            <StackPanel x:Name="setting_Display_cont_Screens">

            </StackPanel>
          </StackPanel>



          <!--  Displays -->
        </ScrollViewer>
      </Grid>

    </Grid>
  </Border>
</UserControl>
