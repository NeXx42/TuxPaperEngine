<Application xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" x:Class="AvaloniaUI.App" RequestedThemeVariant="Default">
    <!-- "Default" ThemeVariant follows system theme variant. "Dark" or "Light" are other available options. -->

    <Application.Styles>
        <FluentTheme />
    </Application.Styles>

    <Application.Resources>
        <SolidColorBrush x:Key="bg_Panel" Color="#121212"/>
        <SolidColorBrush x:Key="bg_Panel_Light" Color="#1F1F1F"/>
    </Application.Resources>
</Application>